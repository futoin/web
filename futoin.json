{
  "name": "futoin-website",
  "version": "0.0.1",
  "vcs": "git",
  "plugins": {
    "release": "futoin.cid.misc.releasetool"
  },
  "entryPoints": {
    "frontend": {
      "tool": "nginx",
      "path": "public"
    }
  },
  "webcfg": {
    "root": "public",
    "mounts": {
      "/": {
        "tune": {
          "pattern": true,
          "staticGzip": true
        }
      },
      "/favicons/": {
        "tune": {
          "etag" : true,
          "pattern": false,
          "gzip": false
        }
      },
      "~* \\.html$" : {
        "tune" : {
          "etag" : true,
          "expires" : "off",
          "staticGzip": true
        }
      }
    }
  },
  "actions": {
    "build": [
        "@cid tool exec npm -- run build",
        "@cid tool build gzip"
    ],
    "develop": "@cid tool exec npm -- run develop",
    "upgrade-deps": [
      "@cid tool update",
      "@cid tool exec yarn -- upgrade --latest"
    ]
  }
}
